<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Venta.AddVenta"
		android:orientation="vertical"
		
		>
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			>
		
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Carrito de compras"
				android:id="@+id/editText"
				android:layout_alignParentTop="true"
				app:layout_constraintEnd_toEndOf="parent"
				tools:layout_editor_absoluteY="48dp"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginTop="21dp"
				android:layout_centerInParent="true"/>
	</RelativeLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.8"
			android:orientation="vertical"
			android:layout_margin="8dp">
		
		<com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:id="@+id/venta_usuario"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:counterEnabled="true"
				app:counterMaxLength="8">
			
			<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Ingrese dni"
					android:maxLines="1"
					android:inputType="number"/>
		</com.google.android.material.textfield.TextInputLayout>
		
		<Spinner
				style="@style/Widget.AppCompat.Spinner"
				android:id="@+id/venta_spinner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout
			android:layout_marginTop="8dp"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			
			<com.google.android.material.textfield.TextInputLayout
					style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
					android:id="@+id/producto_layout"
					android:layout_width="0dp"
					android:layout_weight="4"
					android:layout_height="wrap_content"
					app:errorEnabled="true"
					>
				
				<AutoCompleteTextView
						android:layout_marginLeft="4dp"
						android:paddingLeft="6dp"
						android:layout_width="match_parent"
						android:layout_height="52dp"
						android:id="@+id/producto_seleccionado"
						android:hint="Producto"
						android:completionHint="Escojer"
						android:maxLines="1"
						android:inputType="text"
						android:completionThreshold="0"
						android:imeOptions="actionNext"
						/>
			</com.google.android.material.textfield.TextInputLayout>
			
			<com.google.android.material.button.MaterialButton
					style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
					android:backgroundTint="@color/secondaryLightColor"
					
					android:id="@+id/producto_clear"
					android:layout_marginTop="12dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Limpiar"/>
		</LinearLayout>
		
		
		<com.google.android.material.textfield.TextInputLayout
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:id="@+id/cantidad_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				>
			
			<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/cantidad"
					android:hint="Cantidad"
					android:maxLines="1"
					android:inputType="number"
					/>
		</com.google.android.material.textfield.TextInputLayout>
	
	
	</LinearLayout>
	
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3"
			android:orientation="vertical"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			>
		
		<LinearLayout
				android:id="@+id/l_1"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				>
			
			<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="ID"/>
			
			<TextView
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="wrap_content"
					android:text="Nombre"
					android:textAlignment="center"/>
			
			<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="P Unit."/>
			
			<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="Cantidad"
					android:maxLines="1"
					android:inputType="text"/>
		
		
		</LinearLayout>
		
		<androidx.recyclerview.widget.RecyclerView
				
				android:id="@+id/recycler_list_products"
				android:layout_width="match_parent"
				android:layout_height="250dp"
				tools:listitem="@layout/product_item_list"
				android:focusable="true"
				
				android:layout_alignParentStart="true"
				android:layout_below="@+id/l_1"
				android:layout_alignParentLeft="true"/>
		
		<RelativeLayout
				android:id="@+id/r_l"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_below="@+id/recycler_list_products">
			
			
			<TextView
					android:id="@+id/precio_total"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Precio total: 0"
					android:textSize="22sp"
					android:layout_centerHorizontal="true"/>
		</RelativeLayout>
		
		<LinearLayout
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_margin="10dp">
			
			<com.google.android.material.button.MaterialButton
					style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
					android:id="@+id/venta_cancelar"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"
					android:backgroundTint="@color/secondaryLightColor"
					android:text="Cancelar "/>
			
			<View
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"/>
			
			<com.google.android.material.button.MaterialButton
					style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
					android:id="@+id/venta_añadir"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:backgroundTint="@color/secondaryLightColor"
					android:textAlignment="center"
					android:layout_height="wrap_content"
					android:text="Añadir"/>
		</LinearLayout>
	
	
	</RelativeLayout>


</LinearLayout>