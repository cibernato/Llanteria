<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:showIn="@layout/app_bar_main"
		tools:context=".PaginaPrincipal.MainActivity"
		android:orientation="vertical">
	
	<TextView
			android:id="@+id/prueba"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Que desea hacer ..."
			android:textSize="40dp"
			android:textColor="@color/secondaryDarkColor"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="90dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="30dp"
			android:layout_marginEnd="30dp"/>
	
	<TextView
			android:id="@+id/venta"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="+ Realizar una venta"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/prueba"
			android:layout_marginTop="37dp"
			android:textSize="25sp"/>
	
	<TextView
			android:id="@+id/cliente"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="+ AÃ±adir un cliente"
			android:textSize="25sp"
			android:layout_alignParentTop="true"
			android:layout_marginTop="263dp"
			android:layout_alignStart="@+id/venta"
			android:layout_alignLeft="@+id/venta"/>
	
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" Visite la pagina web para mayor informacion"
			android:id="@+id/link_to_web"
			android:layout_centerInParent="true"
			android:textSize="20sp"
			android:padding="8dp"
			android:textAlignment="center"/>
	
	
	
	
	

</RelativeLayout>